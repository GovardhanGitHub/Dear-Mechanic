<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ImageView
        android:id="@+id/frag_mech_IV"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/grey_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />


    <TextView
        android:id="@+id/frag_mech_name_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"

        android:layout_marginTop="16dp"

        android:layout_marginRight="10dp"

        android:text="Govardhan"
        android:textColor="@color/grey_80"

        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_mech_IV" />

    <TextView
        android:id="@+id/frag_add_tv"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:text="Anantapur,andhjflsjdfkl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_mech_name_tv" />

    <TextView
        android:id="@+id/frag_mech_mechType_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:text="fjdklfjlskdjflkj"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_add_tv" />

    <Button
        android:id="@+id/frag_mech_Sec_BTN"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="+91 1234567890"
        app:layout_constraintStart_toEndOf="@+id/frag_mech_Pri_Btn"
        app:layout_constraintTop_toBottomOf="@+id/frag_mech_mechType_tv" />

    <Button
        android:id="@+id/frag_mech_Pri_Btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:text="+91 1234567890"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_mech_mechType_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>